{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Use cases schema",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "order": {
      "type": "integer"
    },
    "howTo": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "guides": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "modalForms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "videos": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "helpTopics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "url"
        ]
      }
    },
    "tutorials": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "title",
    "description",
    "order",
    "image"
  ]
}